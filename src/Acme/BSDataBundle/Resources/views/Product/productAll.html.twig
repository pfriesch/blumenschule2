
{% extends '::baseBS.html.twig' %}
{% block title %}INTERN - Alle Produkte und Pflanzen{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('/js/product2.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}

    {{ include(
    'BSDataBundle:Default:menu.html.twig',
    {   'links':    {
    "zurück" :  path('BSData_mainmenu')
    },
    'title': 'Waren' }
    ) }}




 <div class="row">


    <div class="col-md-10">


    <table class="table table-hover">
    <thead>
        <tr>

            <th>ID</th>
            <th>Code</th>
            <th>Name</th>
            <th>Latein</th>
            <th>Bescheibung</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody class="results">
    {% for entity in pagination %}
        <tr>


            <td>{{ entity.article_id }}</td>
            <td>{{ entity.article_no }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.name2 }}</td>
            <td>{{ entity.description_short }}</td>





            <td>


                <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs  dropdown-toggle" data-toggle="dropdown">
                        Aktionen<span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        {#
                        <li>
                         <a  class="button" href="{{ path('BSData_product_edit', { 'id': entity.id }) }}">
                                 Bearbeiten
                             </a>
                           </li>
                         #}
        {% if entity.article_id is not empty %}
            <li>  <a  target="_blank" class="button" href="http://shop2.blumenschule.de/plenty/ui/admin.html?legacy_ui_id=item_detail&legacy_ui_params=%7B%22gwtTabId%22%3Anull%2C%22itemId%22%3A{{ entity.article_id }}%7D">
                    Plenty
                </a></li>
         {% endif %}
        {% if entity.id is not empty %}
            <li>
                <a  class="button" href="{{ path('BSData_plant_edit', { 'id': entity.id }) }}">
                    Bearbeiten
                </a>
            </li>
            <li>
                <a  class="button" href="{{ path('BSData_plant_delete', { 'id': entity.id }) }}">
                    Löschen
                </a>
            </li>
         {% endif %}
                    </ul>
                </div>


            </td>
        </tr>
    {% endfor %}

    <tr>
        <td colspan="6">
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </td>
    </tr>
    </tbody>
</table>

 </div>
</div>

        {% endblock %}
{% extends 'baseBS.html.twig' %}

{% block stylesheets %}
{{ parent() }}



{% endblock %}


{% block javascripts %}
    {{ parent() }}

<script src="{{ asset('assets/js/orders.js') }}" type="text/javascript"></script>
{% endblock %}


{% block title %}INTERN - Auftragsbearbeitung{% endblock %}


{% block body %}

    {{ include(
    'index/menu.html.twig',
    {   'links':    {
    "zurück" :  path('BSData_mainmenu')
    },
    'title': 'Sammelpack' }
    ) }}





<div class="row">

    <div class="col-md-9">

        <div class="panel panel-default">
        <button onclick="$('input[type=checkbox]').removeAttr('checked');" class="btn btn-default">uncheck </button>

        <form action="{{ path('BSOrder_print') }}" method="post">

            <table class="table table-bordered  table-hover">
                <thead>
                <tr>
                    <th>
                        Packliste
                    </th>
                    <th>
                        Auftragsnummer
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Auftragswert
                    </th>
                    <th>
                        Geändert
                    </th>
                </tr>
                </thead>

                <tbody>
                {% for order in orders %}
                <tr>
                    <td rowspan="2">
{#                       TODO or use plentyid instead of real id? #}
                        <input type="checkbox" name="ID{{order.id}}" value="{{order.id}}">
                    </td>

                    <td rowspan="2" class="Order_NO">
                        {{order.id}}
                    </td>
                    <td rowspan="1">
                        {{order.statusName}}

                    </td>
                    <td class="Order_Name">
{#                        TODO which address to use? 0 or 1 #}
                        {{order.addresses[0].name2}} {{order.addresses[0].name3}}
                    </td>
                    <td>
                        {{order.amounts[0].invoiceTotal| number_format(2, ',', '.') }} &euro;
                    </td>
                    <td>
                        {{order.updatedAt}}
                    </td>

                </tr>
                <tr>

                    <td colspan="1">

                    </td>
                    <td colspan="3">
                        <div>

                           {# <a href="{{ path('BSOrder_getInvoice',{'orderID':order.head.getOrderID}) }}">Rechung</a>#}

                            <a class="order_items_view " href="javascript:none;"> Details</a>
                            <table class="order_items" style="display: none;">
                                {% for item in order.orderItems %}
                                <tr>
                                    <td>
                                        {{item.quantity}}
                                    </td>
                                    <td>
                                        {{item.itemVariationId}}
                                    </td>


                                    <td>
                                        {{item.orderItemName}}
                                    </td>
                                    <td>
                                        {{item.amounts[0].priceGross | number_format(2, ',', '.') }} &euro;
                                    </td>
                                </tr>


                                {% endfor %}
                            </table>

                        </div>

                    </td>
                </tr>

                {% endfor %}
                </tbody>




            </table> {% if orders %}
            <input class="btn btn-default" type="submit" value="Sammeldruck erstellen" />
            {% endif %}

        </form>
        </div>

    </div>
    <div class="col-md-3">
        <div class="panel panel-default">
        <table class="table table-bordered pre-scrollable">
            <thead>
            <tr>
                <th>
                    Die Letzten 10 Sammelpacks
                </th>
            </tr>
            </thead>
            <tbody>
            {% for picklist in pick %}
                <tr>
                    <td>
                        <a href="print?picklist={{picklist.Picklist}}"> {{picklist.Picklist}}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
</div>


{% endblock %}
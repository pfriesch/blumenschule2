{% extends '::baseBS.html.twig' %}
{% block title %}Pflanzen{% endblock %}

{% block stylesheets %}
    {{ parent() }}


    <style type="text/css">
        .ui-autocomplete-loading {
            background: white url('images/ui-anim_basic_16x16.gif') right center no-repeat;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('/js/plant.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}

    {{ include(
    'BSDataBundle:Default:menu.html.twig',
    {   'links':    {    'neue Pflanze' :  path('BSData_plant_new') ,
    "Hauptmenü" :  path('BSData_mainmenu'),
    "zurück" :  path('BSData_plant')
    },
    'title': 'Pflanzen' }
    ) }}




    <div class="row">
        <div class="col-md-12">
            <form role="form"  action="{{ path('BSData_plant_update', { 'id': entity.id }) }}"
                  method="post" {{ form_enctype(edit_form) }}>


            {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-md-4">

                    <div class="form-group">
                            {{ form_label(edit_form.name, 'Name', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'} })  }}
                    </div>
                    <div class="form-group">
                            {{ form_label(edit_form.code ,'Code', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.code, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">
                            {{ form_label(edit_form.latein ,'Latein', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.latein, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(edit_form.hardy, 'Winterhart', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.hardy, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(edit_form.place ,'Standort', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.place, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                        {{ form_label(edit_form.synonym, 'Synonym', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(edit_form.synonym, {'attr': {'class': 'form-control'} })  }}

                    </div>

                </div>

                <div class="col-md-4">
                    <div class="form-group">

                    {{ form_label(edit_form.aviable , 'Verfügbarkeit', {'attr': {'class': 'form-label'} })  }}
                    {{ form_widget(edit_form.aviable, {'attr': {'class': 'form-control'} })  }}

                    </div>



                    <div class="form-group">

                            {{ form_label(edit_form.b_color , 'Farbe', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.b_color, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(edit_form.flavour , 'Duft', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.flavour, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(edit_form.light  ,'Licht', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.light, {'attr': {'class': 'form-control autotext'} })  }}


                    </div>
                    <div class="form-group">

                            {{ form_label(edit_form.base , 'Boden', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.base , {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                        {{ form_label(edit_form.habitus , 'Habitus', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(edit_form.habitus , {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                </div>
                <div class="col-md-4">



                    <div class="form-group">

                            {{ form_label(edit_form.pricegroup , 'Preisguppe', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.pricegroup, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(edit_form.potsize , 'Topfgröße', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.potsize , {'attr': {'class': 'form-control'} })  }}


                    </div>
                    <div class="form-group">

                        {{ form_label(edit_form.h_from , 'Höhe', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(edit_form.h_from , {'attr': {'class': 'form-control'} })  }}

                        {{ form_widget(edit_form.h_to, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.b_from  ,'Blüte von', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(edit_form.b_from, {'attr': {'class': 'form-control'} })  }}

                        {{ form_widget(edit_form.b_to , {'attr': {'class': 'form-control'} })  }}

                    </div>

                </div>
            </div>
            <div class="row">


                <div class="col-md-4">
                    <div class="form-group">

                    {{ form_label(edit_form.instructions, 'Pflegeanleitung', {'attr': {'class': 'form-label'} })  }}

                    {{ form_widget(edit_form.instructions, {'attr': {'class': 'form-control'} })  }}


                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">

                            {{ form_label(edit_form.labeltext, 'Etikettentext', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.labeltext, {'attr': {'class': 'form-control','row': 6} })  }}

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">

                            {{ form_label(edit_form.comment , 'Bemerkung', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(edit_form.comment , {'attr': {'class': 'form-control'} })  }}

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md4">
            <div class="form-group">



                    <button class=" btn btn-primary"     type="submit">Speichern</button>

            </div>

        </div>
    </div>
    </form>



    <div class="col-md-3">
        <div class="ym-gbox">
            <form action="{{ path('BSData_plant_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Löschen</button>
            </form>


        </div>
    </div>


    </div>


{% endblock %}
{% extends '::baseBS.html.twig' %}
{% block title %}Pflanzen{% endblock %}

{% block stylesheets %}
    {{ parent() }}


    <style type="text/css">
        .ui-autocomplete-loading {
            background: white url('images/ui-anim_basic_16x16.gif') right center no-repeat;
        }
    </style>
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('/js/plant.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}


    {{ include(
    'BSDataBundle:Default:menu.html.twig',
    {   'links':    {    'neue Pflanze' :  path('BSData_plant_new') ,
    "Hauptmenü" :  path('BSData_mainmenu'),
    "zurück" :  path('BSData_plant')
    },
    'title': 'Pflanzen' }
    ) }}


    <div class="row">
        <div class="col-md-12">
            <form role="form"  action="{{ path('BSData_plant_create') }}"
                  method="post" {{ form_enctype(form) }}>


            {{ form_errors(form) }}
            <div class="row">
                <div class="col-md-4">

                    <div class="form-group">
                            {{ form_label(form.name, 'Name', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'} })  }}
                    </div>
                    <div class="form-group">
                            {{ form_label(form.code ,'Code', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.code, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">
                            {{ form_label(form.latein ,'Latein', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.latein, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(form.hardy, 'Winterhart', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.hardy, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(form.place ,'Standort', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.place, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                        {{ form_label(form.synonym, 'Synonym', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(form.synonym, {'attr': {'class': 'form-control'} })  }}

                    </div>

                </div>

                <div class="col-md-4">
                    <div class="form-group">

                    {{ form_label(form.aviable , 'Verfügbarkeit', {'attr': {'class': 'form-label'} })  }}
                    {{ form_widget(form.aviable, {'attr': {'class': 'form-control'} })  }}

                    </div>



                    <div class="form-group">

                            {{ form_label(form.b_color , 'Farbe', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.b_color, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(form.flavour , 'Duft', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.flavour, {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(form.light  ,'Licht', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.light, {'attr': {'class': 'form-control autotext'} })  }}


                    </div>
                    <div class="form-group">

                            {{ form_label(form.base , 'Boden', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.base , {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                    <div class="form-group">

                        {{ form_label(form.habitus , 'Habitus', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(form.habitus , {'attr': {'class': 'form-control autotext'} })  }}

                    </div>
                </div>
                <div class="col-md-4">



                    <div class="form-group">

                            {{ form_label(form.pricegroup , 'Preisguppe', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.pricegroup, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">

                            {{ form_label(form.potsize , 'Topfgröße', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.potsize , {'attr': {'class': 'form-control'} })  }}


                    </div>
                    <div class="form-group">

                        {{ form_label(form.h_from , 'Höhe', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(form.h_from , {'attr': {'class': 'form-control'} })  }}

                        {{ form_widget(form.h_to, {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.b_from  ,'Blüte von', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(form.b_from, {'attr': {'class': 'form-control'} })  }}

                        {{ form_widget(form.b_to , {'attr': {'class': 'form-control'} })  }}

                    </div>
                    <div class="form-group">
                        {{ form_label(form.stock  ,'Lagerort', {'attr': {'class': 'form-label'} })  }}
                        {{ form_widget(form.stock, {'attr': {'class': 'form-control'} })  }}

                    </div>

                </div>
            </div>
            <div class="row">


                <div class="col-md-4">
                    <div class="form-group">

                    {{ form_label(form.instructions, 'Pflegeanleitung', {'attr': {'class': 'form-label'} })  }}

                    {{ form_widget(form.instructions, {'attr': {'class': 'form-control'} })  }}


                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">

                            {{ form_label(form.labeltext, 'Etikettentext', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.labeltext, {'attr': {'class': 'form-control','row': 6} })  }}

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">

                            {{ form_label(form.comment , 'Bemerkung', {'attr': {'class': 'form-label'} })  }}
                            {{ form_widget(form.comment , {'attr': {'class': 'form-control'} })  }}

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md4">
            <div class="form-group">


                {{ form_rest(form) }}
                    <button class=" btn btn-primary"     type="submit">Erstellen</button>


            </div>
            </form>
        </div>
    </div>







{% endblock %}